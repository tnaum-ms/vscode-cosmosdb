{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "outDir": "out",
        "lib": [
            "ES2018",
            "dom",
            "dom.iterable"
        ],
        "jsx": "react-jsx",
        "sourceMap": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "rootDir": ".",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts"
    ]
}
